<Window x:Class="ConrolWorkGruznykh.View.RegisterView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConrolWorkGruznykh.View"
        mc:Ignorable="d"
        Title="RegisterView" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBox Text="{Binding Login}" />
            <TextBox Text="{Binding Password}" />
            <TextBox Text="{Binding Email}" />
            <Button Command="{Binding RegisterCommand}" Content="Зарегистрироваться"/>
        </StackPanel>
    </Grid>
</Window>
